.scroll-view{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
}
.scrollbar {
  margin: 0 auto;
  background: black;
  position: relative;
  border-radius: 4rpx;
  overflow: hidden;
}
.scrollbar-block {
  height: 100%;
  position: absolute;
  top: 0;
  background: darkred;
  border-radius: 4rpx;
}

